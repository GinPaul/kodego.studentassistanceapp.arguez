<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/studentAppHomeScreen">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.kodego.app.thingstodo.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signInFragment_to_studentAppHomeScreen"
            app:destination="@id/studentAppHomeScreen" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.kodego.app.thingstodo.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <activity
        android:id="@+id/studentAppHomeScreen"
        android:name="com.kodego.activity.one.studentassistanceapp.StudentAppHomeScreen"
        android:label="StudentAppHomeScreen" />
</navigation>